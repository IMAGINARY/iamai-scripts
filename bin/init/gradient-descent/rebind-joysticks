#!/usr/bin/bash

# Adjust the GRADIENT_DESCENT_JS0_USB_ID and GRADIENT_DESCENT_JS1_USB_ID
# environment variables to match the USB port on your machine.

# The USB bus IDs can be found using `readlink -f /sys/class/input/js*`
# while the joysticks/gamepads are attached. The ID is the last path
# segment that is also a node in `/sys/bus/usb/devices/`.

echo "The following joysticks/gamepads are present in the system:"
readlink -f /sys/class/input/js*
echo

JS0_USB_ID_DEFAULT=1-3:1.0
JS1_USB_ID_DEFAULT=1-4:1.0

JS0_USB_ID="${GRADIENT_DESCENT_JS0_USB_ID:-$JS0_USB_ID_DEFAULT}"
JS1_USB_ID="${GRADIENT_DESCENT_JS1_USB_ID:-$JS1_USB_ID_DEFAULT}"

if [[ -z "${GRADIENT_DESCENT_JS0_USB_ID}" ]]; then
  echo "GRADIENT_DESCENT_JS0_USB_ID environment variable unset. Using default value: ${JS0_USB_ID}"
else
  echo "Using GRADIENT_DESCENT_JS0_USB_ID environment variable. Value: ${JS0_USB_ID}"
fi

if [[ -z "${GRADIENT_DESCENT_JS1_USB_ID}" ]]; then
  echo "GRADIENT_DESCENT_JS1_USB_ID environment variable unset. Using default value: ${JS1_USB_ID}"
else
  echo "Using GRADIENT_DESCENT_JS1_USB_ID environment variable. Value: ${JS1_USB_ID}"
fi


echo "Unbinding all joysticks ..."
find /sys/class/input/ -name 'js*' -print0 | while read -r -d '' js
do
  echo "  Unbinding $js"
  DEVICE_JS="$(readlink -f "$js/device")"
  DEVICE_INPUT="$(echo "$DEVICE_JS" | sed "s|/input/.*$||")"
  DEVICE_INPUT_ID="$(basename "$DEVICE_INPUT")"
  echo "$DEVICE_INPUT_ID" > "$DEVICE_INPUT/driver/unbind"
done

# Unbind the USB ports where the Joysticks are supposed to be connected to
echo "Unbinding USB devices ..."

echo "  Unbinding $JS0_USB_ID"
DRIVER_JS0_USB_ID="$(readlink -f "/sys/bus/usb/devices/$JS0_USB_ID/driver")"
echo "$JS0_USB_ID" > "$DRIVER_JS0_USB_ID/unbind"

echo "  Unbinding $JS1_USB_ID"
DRIVER_JS1_USB_ID="$(readlink -f "/sys/bus/usb/devices/$JS1_USB_ID/driver")"
echo "$JS1_USB_ID" > "$DRIVER_JS1_USB_ID/unbind"

# Wait a bit for the devices to unbound
sleep 1

# Rebind the joysticks in the order we want them to appear in /dev/input/
echo "Re-binding the USB devices ..."

echo "  Binding $JS0_USB_ID"
echo "$JS0_USB_ID" > "$DRIVER_JS0_USB_ID/bind"
sleep 1
echo "  js0 now belongs to $(readlink -f "/sys/class/input/js0")"

echo "  Binding $JS1_USB_ID"
echo "$JS1_USB_ID" > "$DRIVER_JS1_USB_ID/bind"
sleep 1
echo "  js1 now belongs to $(readlink -f "/sys/class/input/js1")"
